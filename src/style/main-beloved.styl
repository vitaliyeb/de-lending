.main-beloved
    background: #5A98D0;
    position: relative
    top: 200px
    height: 1549px
    border-radius: 200px 0px 0px 0px;

.main-beloved__text
    display: flex
    justify-content: space-evenly

.main-beloved__text p
    margin-top: 96px 
    font-family: 'Gilroy'
    font-size: 36px
    line-height: 46px
    letter-spacing: 0.05em
    color: #FFFFFF
    opacity: 2

.main-beloved__text span
    margin-top: 96px
    font-family: 'Gilroy'
    font-size: 16px
    line-height: 26px
    letter-spacing: 0.05em
    color: #FFFFFF
    opacity: 0.6

.main-beloved__items
    margin-left: 213px
    display: flex
    flex-wrap: wrap
    font-family: 'Gilroy'
    font-size: 20px
    line-height: 46px
    letter-spacing: 0.02em
    color: #FFFFFF

.item
    box-sizing: border-box
    padding: 41px 46px
    cursor: pointer

.solid
    border-bottom: 1px solid #FFFFFF

.main-beloved__items div:last-child
    background: #1F3F68;
    margin: 0px 0px
    box-sizing: border-box
    padding: 41px 62px