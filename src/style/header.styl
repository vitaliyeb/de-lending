header
    max-width: 1266px
    width: 100%
    margin: 48px auto
    display: flex
    justify-content: space-between

.header-logo_centre
    display: flex
    margin-left: 83px
    align-items: center

.header-burger
    width: 24px
    height: 16px
    position relative
    cursor: pointer  
    & span     
        position: absolute
        top: 50%
        transform: translateY(-50%)
        width: 100%
        height 4px
        background-color: #356EAD
        display: block
        &:after
            content ''
            display: block 
            width: 100%
            height 4px
            top: -6px
            position: absolute
            background-color: #356EAD
        &:before 
            content ''
            display: block 
            width: 100%
            height 4px
            bottom: -6px
            position: absolute
            background-color: #356EAD      
    &.active 
        background-color: red        